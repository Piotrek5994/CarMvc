@model List<CarMvc.Models.Car>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista kontaktów</h1>
<a class="btn btn-success" asp-area="" asp-controller="Car" asp-action="Edit">Dodaj nowy kontakt</a>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(a => a[0].Model)
                </th>

                <th>
                    @Html.DisplayNameFor(a => a[0].Producer)
                </th>

                <th>
                    @Html.DisplayNameFor(a => a[0].RegistrationNumber)
                </th>
                
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Model
                    </td>
                    <td>
                        @item.Producer
                    </td>
                    <td>
                        @item.Priority
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id=@item.Id>Edycja</a>
                        <a class="btn btn-outline-info" asp-action="View" asp-route-id=@item.Id>Szczegóły</a>
                        <form class="d-inline-block" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć ten samochód?');">
                            <button type="submit" class="btn btn-outline-danger">Usuń</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}